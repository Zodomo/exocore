# Server
gem "webrick", "~> 1.8"

# HTML validation and testing - modern versions
gem "html-proofer", "~> 4.4"
gem "w3c_validators", "~> 1.3"

# Code quality - modern version
gem "rubocop", "~> 1.42", require: false

# Wiki functionality - this may still cause conflicts, but let's try
